<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.winchester.parquesnaturales.Chicaque"
    android:background="#FF096700">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/chicaque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView"
        android:background="#FF096700"
        android:layout_below="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Este año, Chicaque cumple 25 años! Inaugurada en abril de 1990, Chicaque fue la primera reserva natural privada de Colombia!"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/B_SERVICIOS"
        android:background="#FF096700" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICIOS"
        android:id="@+id/B_SERVICIOS"
        android:background="#FF096700"
        android:textStyle="bold"
        android:onClick="B_SERVICIOS"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UBICACIÓN"
        android:id="@+id/UBICACION"
        android:background="#FF096700"
        android:onClick="B_UBICACION"
        android:layout_alignTop="@+id/B_SERVICIOS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTIVIDADES"
        android:id="@+id/ACTIVIDADES"
        android:background="#FF096700"
        android:onClick="B_ACTIVIDADES"
        android:layout_alignTop="@+id/B_SERVICIOS"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PARQUE NATURAL DE CHICAQUE"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22dp"
        android:typeface="serif"
        android:textAlignment="center" />
</RelativeLayout>
